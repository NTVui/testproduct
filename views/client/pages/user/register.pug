extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alertError(5000)
    .container.my-5 
        .row.justify-content-center
            .col-8 
                h1.text-center Đăng ký tài khoản
                form(action=`/user/register`, method="POST") 
                    .form-group 
                        label(for="fullName") Họ và tên
                        input.form-control#fullName(type="text", name="fullName", required)
                    .form-group 
                        label(for="email") Email 
                        input.form-control#email(type="email", name="email", required)
                    .form-group 
                        label(for="password") Mật khẩu
                        input.form-control#password(type="password", name="password", required)
                    .form-group
                        button.btn.btn-primary(type='submit') Đăng ký
