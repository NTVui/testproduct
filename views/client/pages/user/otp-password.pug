extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alertError(5000)
    .container.my-5 
        .row.justify-content-center
            .col-8 
                h1.text-center Nhập mã OTP xác thực
                form(action=`/user/password/otp`, method="POST") 
                    
                    .form-group 
                        label(for="email") Email 
                        input.form-control#email(type="email", name="email",value = email, readonly)
                    
                    .form-group 
                        label(for="otp") Mã OTP
                        input.form-control#otp(type="text", name="otp", required)

                    .form-group
                        button.btn.btn-primary(type='submit') Xác nhận
