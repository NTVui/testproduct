mixin tableTree(items, level=1)
    each item in items
        - indexGlobal = typeof indexGlobal === 'undefined' ? 1 : indexGlobal + 1
        - const prefix = Array(level + 1).join("-- ") 
        tr
          td
            input(type='checkbox', name='id', value=item.id) 
          td #{ indexGlobal }
          td
            img(src=item.thumbnail, alt=item.title, width='100px')
          td #{ item.title }
          td #{prefix}#{item.title}
            input(
              type="number",
              style="width: 60px",
              min="1",
              name="position",
              value=item.position
            )
          td
            if(role.permissions.includes("products-category_edit"))
              if item.status == 'active'
                a(
                  href='javascript:;',
                  data-status=item.status,
                  data-id=item.id,
                  button-change-status,
                  class='badge.badge-success'
                ) Hoạt động
              else
                a(
                  href='javascript:;',
                  data-status=item.status,
                  data-id=item.id,
                  button-change-status,
                  class='badge.badge-danger'
                ) Dừng Hoạt động
            else 
              if item.status == 'active'
                span(
                  
                  data-status=item.status,
                  data-id=item.id,
                  button-change-status,
                  class='badge.badge-success'
                ) Hoạt động
              else
                span(
                  
                  data-status=item.status,
                  data-id=item.id,
                  button-change-status,
                  class='badge.badge-danger'
                ) Dừng Hoạt động

          td
            a.btn.btn-secondary.btn-sm(href=`${prefixAdmin}/products-category/detail/${item.id}`) Chi tiết
            if(role.permissions.includes("products-category_edit"))
              a.btn.btn-warning.btn-sm(href=`${prefixAdmin}/products-category/edit/${item.id}`) Sửa
            button(
              class="btn btn-danger btn-sm"
              button-delete
              data-id = item.id
            ) Xóa
        if item.children && item.children.length > 0
            +tableTree(item.children, level + 1)

