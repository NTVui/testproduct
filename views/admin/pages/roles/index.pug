extends ../../layouts/default.pug


block main
  
    h1 Nhóm quyền
  
    .card.mb-3p
        .card-header Danh sách
            .card-body
                .row  
                .col-8 
                    
                .col-4
                    a(
                    href=`${prefixAdmin}/roles/create`
                    class="btn btn-outline-success"
                    ) + Thêm mới
        .card-body 
            table.table.table-hover.table-sm
                thead
                    tr
                        th STT
                        th Nhóm quyền
                        th Mô tả ngắn
                        th Hành động
                tbody
                    if records.length > 0
                        each item, index in records
                            tr
                                td #{index + 1}
                                td #{item.title}
                                td #{cleanHtml(item.description)}
                                td
                                    a.btn.btn-sm.btn-info.text-white(href=`${prefixAdmin}/roles/detail/${item._id}`) Chi tiết
                                    a.btn.btn-sm.btn-warning.text-white.ms-1(href=`${prefixAdmin}/roles/edit/${item._id}`) Sửa
                                    a.btn.btn-sm.btn-danger.text-white.ms-1(href=`/admin/groups/delete/${item._id}`) Xóa
                    else
                        tr
                        td.text-center(colspan='4') Không có dữ liệu