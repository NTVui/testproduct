extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  h1.mb-4 Thêm mới sản phẩm
  +alertError(5000)
  form(
    action=`${prefixAdmin}/products/create`,
    id="form-create-product",
    method='POST',
    enctype="multipart/form-data"
    )

    .form-group
      label(for='title') Tiêu đề
      input#title.form-control(type='text', name='title', required)

    .form-group
      label(for='desc') Mô tả
      textarea#desc.form-control(rows='5', name='description') 

    .form-group
      label(for='price') Giá
      input#price.form-control(
        type='number',
        name='price',
        value='0',
        min='0',
        required
      )

    .form-group
      label(for='discount') % Giảm giá
      input#discount.form-control(
        type='number',
        name='discountPercentage',
        min='0',
        max='100',
        value='0',
        required
      )

    .form-group
      label(for='stock') Số lượng
      input#stock.form-control(
        type='number',
        name='stock',
        min='0',
        max='100',
        value='0',
        required
      )

    div(
      class="form-group"
      upload-image
      )
      label(for='thumbnail') Ảnh
      input#thumbnail.form-control-file(type='file', name='thumbnail', accept="image/*", upload-image-input)
      img(src="", upload-image-preview, class="image-preview")
    .form-group
      label(for='position') Vị trí
      input#position.form-control(
        type='number',
        name='position',
        placeholder='Tự động tăng',
        min='1'
      )


    .form-group.form-check.form-check-inline
      input#status-active.form-check-input(
        type='radio',
        name='status',
        value='active',
        checked
      )
      label.form-check-label(for='status-active') Hoạt động

    .form-group.form-check.form-check-inline
      input#status-inactive.form-check-input(
        type='radio',
        name='status',
        value='inactive',
        checked
      )
      label.form-check-label(for='status-inactive') Dừng Hoạt động

    div(class="form-group")
      button.btn.btn-primary(type='submit') Tạo mới

  
  script(src='/admin/js/product.js')

//- input# lần lượt là id và class
